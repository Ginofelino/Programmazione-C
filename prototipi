#include <stdio.h>
#include <stdlib.h>

//Dichiarazione delle variabili
int scelta,a,b,i;
float tot;

//Prototipo
int menu();
int addizione();
int sottrazione();
int moltiplicazione();
float divisione();
int potenza();

//Esecuzione
int main(){
    menu();
    printf("%f",tot);
    system("pause");
    return 0;
}
//Menu
int menu(){
	printf("Scelta operazione da eseguire\n\n");
	printf("1) Addizione\n");
	printf("2) Sottrazione\n");
	printf("3) Moltiplicazione\n");
	printf("4) Divisione\n");
	printf("5) Potenza\n");
	printf("6) Chiudi il programma\n");
	scanf("%d",&scelta);
	if(scelta==1){
    	addizione();
	}
	else if(scelta==2){
		sottrazione();
	}
	else if(scelta==3){
		moltiplicazione();
	}
	else if(scelta==4){
		divisione();
	}
	else if(scelta==5){
		potenza();
	}
	else if(scelta==6){
		exit(1);
	}
	else if(scelta>6||scelta<1){
		printf("Scelta errata, scegli una fra le opzioni elencate\n");
		menu();
	}

	

}

//Funzione di addizione
int addizione(a,b){
	scanf("%d",&a);
	scanf("%d",&b);
	tot=a+b;
	return tot;
	}
	
//Funzione di sottrazione
	int sottrazione(a,b){
	scanf("%d",&a);
	scanf("%d",&b);
	tot=a-b;
	return tot;
	}
	
//Funzione di moltiplicazione
	int moltiplicazione(a,b){
	scanf("%d",&a);
	scanf("%d",&b);
	tot=a*b;
	return tot;
	}
	
//Funzione di divisione
	float divisione(a,b){
	scanf("%d",&a);
	scanf("%d",&b);
	tot=(float)a/b;
	return tot;
	}
	
//Funzione di elevazione a potenza
	int potenza(a,b){
		printf("Inserisci la base\n");
		scanf("%d",&a);
		printf("Inserisci l'esponente\n");
		scanf("%d",&b);
		tot=a;
		for(i=1;i<b;i++){
			tot=tot*a;
		}
		return tot;
	}
	
	
